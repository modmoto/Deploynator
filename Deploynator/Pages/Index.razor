@page "/"
@using Microsoft.CognitiveServices.Speech

<button @onclick="() => RasperrySound()">play device ready</button>

@code {
    private async Task RasperrySound()
    {
        var config = SpeechConfig.FromSubscription("990a253fc3cb487e8f02867fcd3d86c2", "francecentral");
        var synthesizer = new SpeechSynthesizer(config);
        await synthesizer.SpeakTextAsync("This is easy as fuck");
    }
}
